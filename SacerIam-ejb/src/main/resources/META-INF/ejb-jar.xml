<?xml version="1.0" encoding="UTF-8"?>

<ejb-jar  xmlns = "http://java.sun.com/xml/ns/javaee" 
          version = "3.1"
          xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
    
    <module-name>SacerIam-ejb</module-name>
    <enterprise-beans>
        <session>
            <ejb-name>timerHelper</ejb-name>
            <ejb-class>it.eng.parer.jboss.timers.helper.SacerIamTimerHelper</ejb-class>
            <session-type>Stateless</session-type>
        </session>
    </enterprise-beans>
    <interceptors>  
        <interceptor>
            <interceptor-class>it.eng.paginator.ejb.PaginatorInterceptor</interceptor-class>             
            <around-invoke>            
                <method-name>storeInvocation</method-name>               
            </around-invoke>            
        </interceptor>  
           
        <interceptor>
            <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
            <around-invoke>
                <method-name>executeOnJbossNode</method-name>
            </around-invoke>
        </interceptor>
        
        <interceptor>
            <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossResetStatusInterceptor</interceptor-class>
            <around-invoke>
                <method-name>resetStatus</method-name>
            </around-invoke>
        </interceptor>
        
        <interceptor>
            <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerStartInterceptor</interceptor-class>
            <around-invoke>
                <method-name>start</method-name>
            </around-invoke>
        </interceptor>
        
        <interceptor>
            <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerTimeoutInterceptor</interceptor-class>
            <around-timeout>
                <method-name>timeout</method-name>
            </around-timeout>
        </interceptor>   
    </interceptors>     
             
    <assembly-descriptor>
        <interceptor-binding>
            <ejb-name>ReplicaUtentiTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>startSingleAction</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ReplicaUtentiTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>stop</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ReplicaUtentiTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerTimeoutInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>doJob</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ReplicaUtentiTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerStartInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>startCronScheduled</method-name>
            </method>
        </interceptor-binding>        
        <interceptor-binding>
            <ejb-name>ScadenzaFattureTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>startSingleAction</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ScadenzaFattureTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>stop</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ScadenzaFattureTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerTimeoutInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>doJob</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ScadenzaFattureTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerStartInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>startCronScheduled</method-name>
            </method>
        </interceptor-binding>
          <interceptor-binding>
            <ejb-name>EliminaReplicheTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>startSingleAction</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>EliminaReplicheTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>stop</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>EliminaReplicheTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerTimeoutInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>doJob</method-name>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>EliminaReplicheTimer</ejb-name>
            <interceptor-order>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerNodeInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerResetStatusInterceptor</interceptor-class>
                <interceptor-class>it.eng.parer.jboss.timer.interceptor.JbossTimerStartInterceptor</interceptor-class>
            </interceptor-order>
            <method>
                <method-name>startCronScheduled</method-name>
            </method>
        </interceptor-binding>
    </assembly-descriptor>   
</ejb-jar>
